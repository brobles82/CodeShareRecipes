<div class="row-fluid">
	<br>
		
	<div class="span12 no_margin_left">
		<div class="row-fluid">
			<div class="span5">
				<h3>I'm looking for...</h3>
			</div>
		</div>
			
		<div class="row-fluid">
			<div class="span5">
			{{view Ember.TextField class="span12" valueBinding="searchTerm" placeholder="What code recipe are you looking for?"}}
			</div>
	
			
			<div class="span1 browse_search">
				<a class="btn btn-primary btn-large btn-success" href="browse.html">Search</a>
			</div>
				
		</div>
		<br>
	</div>
</div>

<div class="row-fluid">
	<div class="span9">
		
		<h2>Recipes listings found</h2>
		
		<table class="table table-striped">
			<tbody>
				<table class="table table-striped">
					<tbody>
						{{#each recipe in filteredContent}}
							<tr>
								<td>
									<strong>{{#linkTo 'recipes.recipe' recipe}} {{recipe.title}} {{/linkTo}}</strong><br>
									Posted by {{#linkTo 'recipes.author' recipe.userName}} {{recipe.userName}} {{/linkTo}}
								</td>
								<td>Emberjs<br>Javascript, html css</td>
								<td> {{formatDate recipe.date}}</td>
							</tr>
						{{/each}}

					</tbody>
				</table>
			</tbody>
		</table>
	</div>
		
	<div class="span3">
		<h2>&nbsp;</h2>
		
		<div class="row-fluid">
			<div class="span12 center">
				{{#linkTo recipes.new  classNames="btn btn-primary btn-large post_job" }}
					Code a Recipe<br /><small>(it's free!)</small>
				{{/linkTo}}
			</div>
			</div>
		</div>
	</div>
</div>
