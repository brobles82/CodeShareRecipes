<div class="row-fluid">
	<br>
		
	<div class="span12 no_margin_left">
		<div class="row-fluid">
			<div class="span5">
				<h3>I'm looking for...</h3>
			</div>
		</div>
			
		<div class="row-fluid">
			<div class="span5">
			{{view Ember.TextField class="span12" valueBinding="searchTerm" placeholder="What recipe are you looking for?"}}
			</div>
	
			
			<div class="span1 browse_search">
				<a class="btn btn-primary btn-large btn-success" href="browse.html">Search</a>
			</div>
				
		</div>
		<br>
	</div>
</div>

<div class="row-fluid">
	<div class="span9">
		
		<h2>914 recipes listings found</h2>
		
		<table class="table table-striped">
			<tbody>
				<table class="table table-striped">
					<tbody>
						{{#each recipe in filteredContent}}
							<tr>
								<td> <span class="label label-warning">Javascript</span> </td>
								<td>
									<strong>{{#linkTo 'recipes.recipe' recipe}} {{recipe.title}} {{/linkTo}}</strong><br>
									Posted by <a href="#">Teleworm</a>
								</td>
								<td>Emberjs<br>Javascript, html css</td>
								<td> 10 Jan 2013</td>
							</tr>
						{{/each}}

					</tbody>
				</table>
			</tbody>
		</table>
			
		<div class="pagination pull-right">
			<ul>
				<li>
					<a href="#">Prev</a>
				</li>
				<li class="active">
					<a href="#">1</a>
				</li>
				<li>
					<a href="#">2</a>
				</li>
				<li>
					<a href="#">Next</a>
				</li>
			</ul>
		</div>
	</div>
		
	<div class="span3">
		<h2>&nbsp;</h2>
		
		<div class="row-fluid">
			<div class="span12 center">
				{{#linkTo recipes.new  classNames="btn btn-primary btn-large post_job" }}
					Post a Recipe<br /><small>(it's free!)</small>
				{{/linkTo}}
			</div>
			
			<div class="span12">
				<br><br>
				<h3>Email me</h3>
				<p>Send me new recipes to my inbox every day</p>
				<input type="text" class="span12" placeholder="Enter your email">
				<a class="btn btn-primary btn-small pull-right" href="register.html">Email me recipes</a>
				<br><br><br><br>
			</div>
		</div>
	</div>
</div>
