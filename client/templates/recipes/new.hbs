<div class="container-fluid">
  <div class="row-fluid">
		
		<div class="span8">	
			<br>
			
			<h2><i class="icon-suitcase"></i>&nbsp;&nbsp;Post a new Recipe</h2>
			
			{{#formFor Recipe}}
				<h3>Recipe Details</h3>
				
        <div class="row-fluid">
					
					<div class="span8">
						<div class="control-group">
							<label class="control-label">Recipe title</label>
							<div class="controls">
                {{input title as=text inputConfig="class:span12"}}
								<span class="help-block">Enter the recipe title</span>
							</div>
						</div>
					</div>
				</div>

				<div class="row-fluid">
					<div class="span8">
						<div class="control-group">
							<label class="control-label">Jsbin Links</label>
							<div class="controls">
                {{input preview as=text inputConfig="class:span12"}}
								<span class="help-block">Do you have a Jsbin for this recipe?</span>
							</div>
						</div>
					</div>
					
				</div>
				<br><h3>Recipe Body</h3>
				
				<div class="row-fluid">
					
          <div class="span12">
  					<div class="control-group">
							<div class="wmd-panel">
                <div id="wmd-button-bar"></div>
                {{view App.NewRecipeView id="wmd-input" autoresize=true valueBinding="body"}}
              </div>
						</div>
					</div>

				</div>
        
        <br><h3>Preview</h3>
  			
				<div class="row-fluid">
					
          <div class="span12">
  					<div class="control-group">
							<div id="wmd-preview" class="wmd-panel wmd-preview"></div>
						</div>
					</div>

				</div>

				<div class="row-fluid">
					
          <div class="span12">
  					{{submit class='btn btn-primary btn-success'}}		
					</div>

				</div>
				
        
        <br><br>
			{{/formFor}}
			
		</div>
		
		<div class="span4 sidebar" style="height: 800px;">
			<br>
			<br>
			<h3>Posting a recipe is Free!!!</h3>
			
