<div class="view-job">
	{{view App.RecipeView}}

	<div {{bindAttr class="isEditing:editing"}}>

		{{#if isEditing}}
			<div class="row-fluid">
				<div class="span9">

					<div class="row-fluid">
						<div class="span12">
            
							<br>
							<h1>{{view App.EditRecipeView valueBinding="title"}}</h1>

							<div class="row-fluid">
								<div class="span12">
									<span class="fulltime">Javascript</span>|<span>&nbsp;&nbsp;Posted on Jan 22nd, 2013</span>

									{{#linkTo recipes.index  classNames="pull-right" }}
										<span>←&nbsp;</span><span class="lnk-title">Back</span>
									{{/linkTo}}

						    </div>
					    </div>
					    <hr>

					    <div class="row-fluid">
  					    <div class="span12">

                  <div class="wmd-panel">
                    <div id="wmd-button-bar"></div>
                      {{view App.NewRecipeView id="wmd-input" autoresize=true valueBinding="body"}}
                    </div>

                    <div id="wmd-preview" class="wmd-panel wmd-preview"></div>
                  </div>
						    </div>
					    </div>
              
              <hr>
              <h3>JsBin view</h3>
              
              <div class="row-fluid">
                <div class="span12">
                  {{view Ember.TextField valueBinding="preview"}}
                </div>
              </div>

              {{#if preview}}
                <hr>
    			      <h3>JsBin Preview</h3>

                <div class="row-fluid">
  					      <div class="span12">
							      {{view App.IframeView srcBinding=preview}}
						      </div>
					      </div>
              {{/if}}
              
              <br>

				    </div>
			    </div>
  	    

        <div class="span3 ">
			    <br>
			    <div class="row-fluid">

            <div class="span12">
            	<div class="row-fluid">
            		
            		<div class='span6'>
									<a {{action "acceptChanges"}} class="btn btn-primary btn-large post_job apply_now scroll">Save</a>
            		</div>
								<div class='span6'>
									<a {{action "discartChanges"}} style="background: #d9534f;" class="btn btn-large post_job apply_now scroll">Discard</a>
            		</div>
            	
            	</div>
            	<br><br>
            	
				    </div>

				    <div class="span12">
					    <br>
					    <ul class="nav nav-tabs nav-stacked">
						    <li><a href="#"><i class="icon-envelope"></i> Email</a></li>
						    <li><a href="#"><i class="icon-share"></i> Share</a></li>
					    </ul>
				    </div>

				    <div class="span12">
					    <h3>Similar jobs</h3>
					    <ul class="similar_jobs">
						    <li><a href="browse.html">Linux System Administrator</a><br><small>by Teleworm Corp</small></li>
						    <li><a href="browse.html">Project manager</a><br><small>by Broadcast Music, Inc.</small></li>
	    					<li><a href="browse.html">UI Developer</a><br><small>by BioWare Intl.</small></li>
			    		</ul>
				    </div>

			    </div>
			  </div>
		  </div>

    {{else}}
  
	    <div class="row-fluid">
		    <div class="span9">

			    <div class="row-fluid">
				    <div class="span12">
					    <br>
					    <h1>{{title}}</h1>

              <div class="row-fluid">
						    <div class="span12">
							    <span class="fulltime">Javascript</span>|<span>&nbsp;&nbsp;Posted on Jan 22nd, 2013</span>
									{{#linkTo recipes.index  classNames="pull-right" }}
										<span>←&nbsp;</span><span class="lnk-title">Back</span>
									{{/linkTo}}
						    </div>
					    </div>
					    <hr>

					    <div class="row-fluid">
  					    <div class="span12">
							    {{{ formatBody body}}}
						    </div>
					    </div>

              {{#if preview}}
                <hr>
    			      <h3>JsBin view</h3>

                <div class="row-fluid">
  					      <div class="span12">
							      {{view App.IframeView srcBinding=preview}}
						      </div>
					      </div>
              {{/if}}
              <br>

				    </div>
			    </div>
  	    </div>
    
        <div class="span3 ">
			    <br>
			    <div class="row-fluid">
						{{#if canManage}}
							<div class="span12">
								<a {{action "editTodo"}} class="span6 btn btn-primary btn-large post_job apply_now scroll">Edit</a>
								<br><br>
								<a {{action "removeTodo"}} style="background: #d9534f;" class="btn btn-large post_job apply_now scroll">Delete</a>
							</div>
						{{/if}}

				    <div class="span12">
					    <br>
					    <ul class="nav nav-tabs nav-stacked">
						    <li><a href="#"><i class="icon-envelope"></i> Email</a></li>
						    <li><a href="#"><i class="icon-share"></i> Share</a></li>
					    </ul>
				    </div>
				
				    <div class="span12">
					    <h3>Similar jobs</h3>
					    <ul class="similar_jobs">
						    <li><a href="browse.html">Linux System Administrator</a><br><small>by Teleworm Corp</small></li>
						    <li><a href="browse.html">Project manager</a><br><small>by Broadcast Music, Inc.</small></li>
	    					<li><a href="browse.html">UI Developer</a><br><small>by BioWare Intl.</small></li>
			    		</ul>
				    </div>
				
			    </div>
			  </div>
		  </div>
    {{/if}}
	</div>
</div>